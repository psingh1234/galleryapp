<table><tr><th>picture</th><th>tags</th><th>submit tag</th><th>destroy</th></tr>

<% @upload.each do |up|%>
<tr><td>


	<%= image_tag up.avatar.url(:thumb) %> 
	Tags:<%Tag.where(:upload_id=>up.id).each do |tg|%>
<%=tg.name%>,
<%end%>
</td><td>
<%= link_to 'destroy', album_upload_path(:user_id => current_user.id, :id =>up), method:
 :delete, data: {confirm: 'are you sure?'}%> 

 <%= form_for :tag, :url =>  
	upload_tags_path(up.id) do |form| %>
	<%= form.hidden_field :upload_id,:value=>up.id%>
	<%=form.label :name%>
	<%= form.text_field :name%><br />
	<%= form.submit %></td>
 <%end %>
 </tr>
<%end %>
</table>